---
import { BaseHead, OGType} from "@/components/BaseHead";
import Layout from "../layouts/Base.astro"
import { PostListing } from "../components/Postlisting"

const title = "YEEHAA";
import { getPosts } from "@/helpers/pages";
const posts = await getPosts();
const description = "Jan Hein Hoogstad's personal website"

---
<Layout {title}>
  <BaseHead 
    slot="og:data" 
    type={OGType.WEBSITE} 
    {title} 
    {description} 
    url={Astro.url} />
  <div transition:name="content" class="px-5 sm:px-8 gap-8 py-12 lg:py-20 mx-auto">
    { posts.map(({slug, data }) => <PostListing {...data} {slug}/>)}
  </div>
</Layout>
