---
import Layout from "./Base.astro"
const { title, inspirational, logoLink } = Astro.props;
---

<Layout {title} {inspirational} {logoLink}>
  <article class="container overflow-hidden px-10 lg:px-0 lg:max-w-4xl mx-auto
    prose
    prose-base md:prose-lg lg:prose-xl
    prose-lead:font-serif
    prose-lead:first-letter:text-3xl
    prose-lead:md:first-letter:text-4xl
    prose-lead:lg:first-letter:text-5xl
    prose-lead:prose-lg md:prose-lead:prose-xl lg:prose-lead:prose-2xl
    dark:prose-invert
    prose-h1:font-serif hover:prose-h1:font-sans
    md:prose-h1:text-6xl prose-h1:text-5xl
    prose-h2:font-serif
    prose-strong:font-serif
    prose-blockquote:font-serif prose-blockquote:font-normal prose-blockquote:not-italic
    prose-blockquote:border-primary dark:prose-blockquote:border-secondary
    prose-a:no-underline prose-a:text-secondary dark:prose-a:text-primary-light
    dark:hover:prose-a:text-primary-dark
    ">
    <slot/>
</Layout>

<style is:global>
.footnotes h2{
  display: none;
}
.footnotes ol {
  padding-left: 1em;
  font-size: 0.8em;
}
.footnotes li  {
  text-indent: 0;
  word-wrap: break-word;

}
</style>
