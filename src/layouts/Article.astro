---
import Layout from "./Base.astro"
const { title, inspirational } = Astro.props;
---

<Layout {title} {inspirational}>
  <article class="container overflow-hidden px-10 lg:px-0 lg:max-w-4xl mx-auto
    prose prose-lg md:prose-xl
    dark:prose-invert
    prose-h1:text-5xl prose-h1:font-serif hover:prose-h1:font-sans md:prose-h1:text-6xl
    prose-h2:font-serif
    prose-a:no-underline prose-a:text-secondary dark:prose-a:text-primary
    ">
    <slot/>
</Layout>

