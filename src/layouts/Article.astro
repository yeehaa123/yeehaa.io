---
import Layout from "./Base.astro"
const { title, inspirational } = Astro.props;
---

<Layout {title} {inspirational}>
  <article class="container overflow-hidden px-10 lg:px-0 lg:max-w-4xl mx-auto
    prose prose-lg md:prose-xl
    dark:prose-invert
    prose-h1:text-5xl prose-h1:font-serif hover:prose-h1:font-sans md:prose-h1:text-6xl
    prose-h2:font-serif
    prose-strong:font-serif
    prose-blockquote:font-serif prose-blockquote:font-bold prose-blockquote:not-italic
    prose-blockquote:border-primary dark:prose-blockquote:border-secondary
    prose-a:no-underline prose-a:text-secondary dark:prose-a:text-primary
    hover:prose-a:font-serif
    ">
    <slot/>
</Layout>

<style is:global>
.footnotes h2{
  display: none;
}
.footnotes ol {
  padding-left: 1em;
  font-size: 0.8em;
}
.footnotes li  {
  text-indent: 0;
  word-wrap: break-word;

}
</style>
